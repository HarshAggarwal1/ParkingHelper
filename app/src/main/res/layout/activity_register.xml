<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">

    <ImageView
        android:id="@+id/registerBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/backButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/inria_sans"
        android:text="REGISTER"
        android:textColor="#FF000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerBack" />

    <EditText
        android:id="@+id/registerEditTextFirstName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:hint="First Name" />

    <EditText
        android:id="@+id/registerEditTextLastName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_60"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextFirstName" />

    <EditText
        android:id="@+id/registerEditTextEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextLastName"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/registerEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:inputType="textPassword"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextEmail"
        android:hint="Password" />

    <ImageButton
        android:id="@+id/loginButtonShowHidePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:src="@drawable/show_hide_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/registerEditTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextEmail" />

    <EditText
        android:id="@+id/registerEditTextCountryCode"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_60"
        android:hint="( +__ )"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextPassword" />

    <EditText
        android:id="@+id/registerEditTextContact"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_60"
        android:hint="Contact Number"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toEndOf="@+id/registerEditTextCountryCode"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextPassword" />

    <Button
        android:id="@+id/registerButtonSubmit"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rectangle_bg_purple_300_border_black_900_radius_60"
        android:fontFamily="@font/inria_sans"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:gravity="center"
        android:shadowRadius="20"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEditTextContact" />


</androidx.constraintlayout.widget.ConstraintLayout>