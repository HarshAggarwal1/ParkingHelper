<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF000000"
    android:layout_height="match_parent"
    tools:context=".UserProfileSettings">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_settings_back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:background="@drawable/circle_bg_translucent_black"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/inria_sans"
            android:gravity="center"
            android:text="User Settings"
            android:translationX="-24dp"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/profile_settings_edit_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_bg_white"
            android:scaleType="fitXY"
            android:src="@drawable/user_icon" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil_icon"
            android:background="@drawable/rectangle_bg_white_translucent"
            android:layout_gravity="bottom|end" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/profile_settings_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_edit_pic">

        <EditText
            android:id="@+id/profile_settings_email_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_bg_bluegray_dark_50_border_black_900_radius_20"
            android:fontFamily="@font/inria_sans"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:enabled="false"
            android:text="Email ID"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/profile_settings_email_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="20dp"
            android:src="@drawable/pencil_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_settings_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_email">

        <EditText
            android:id="@+id/profile_settings_password_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_bg_bluegray_dark_50_border_black_900_radius_20"
            android:fontFamily="@font/inria_sans"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Password"
            android:enabled="false"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/profile_settings_password_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="20dp"
            android:src="@drawable/pencil_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_settings_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_password">

        <EditText
            android:id="@+id/profile_settings_phone_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_bg_bluegray_dark_50_border_black_900_radius_20"
            android:fontFamily="@font/inria_sans"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="phone"
            android:text="Contact Number"
            android:enabled="false"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/profile_settings_phone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="20dp"
            android:src="@drawable/pencil_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_settings_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_phone">

        <EditText
            android:id="@+id/profile_settings_vehicle_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_bg_bluegray_dark_50_border_black_900_radius_20"
            android:fontFamily="@font/inria_sans"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="text"
            android:text="Vehicle Number"
            android:enabled="false"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/profile_settings_vehicle_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="20dp"
            android:src="@drawable/pencil_icon" />
    </LinearLayout>

    <Button
        android:id="@+id/profile_settings_save"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle_bg_grey_300_border_black_900_radius_60"
        android:fontFamily="@font/inria_sans"
        android:gravity="center"
        android:shadowRadius="20"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_vehicle" />

</androidx.constraintlayout.widget.ConstraintLayout>