<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/camera_scanner_frame"
        android:layout_width="match_parent"
        android:background="#FF000000"
        android:layout_height="match_parent">

        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="150dp"
            app:autoFocusButtonColor="#FFFFFFFF"
            app:autoFocusButtonVisible="true"
            app:autoFocusButtonPosition="topStart"
            app:autoFocusButtonPaddingVertical="40dp"
            app:autoFocusButtonPaddingHorizontal="40dp"
            app:flashButtonColor="#FFFFFFFF"
            app:flashButtonVisible="true"
            app:flashButtonPosition="topEnd"
            app:flashButtonPaddingVertical="40dp"
            app:flashButtonPaddingHorizontal="40dp"
            app:maskColor="#77000000"

            />

        <RelativeLayout
            android:id="@+id/camera_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationZ="1dp"
            android:layout_marginTop="60dp"
            android:background="#00000000"
            android:padding="16dp">

            <ImageView
                android:id="@+id/camera_back_button"
                android:src="@drawable/left_arrow"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/circle_bg_translucent_black"
                android:layout_width="36dp"
                android:layout_marginStart="10dp"
                android:padding="4dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"/>
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
