<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage" >

    <ImageView
        android:id="@+id/loginBack"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/backButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/inria_sans"
        android:text="LOGIN"
        android:textColor="#FF000000"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBack" />

    <EditText
        android:id="@+id/loginEditTextUsername"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:paddingStart="@dimen/_32sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:inputType="textEmailAddress"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/loginEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:paddingStart="@dimen/_32sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_77sdp"
        android:inputType="textPassword"
        android:background="@drawable/rectangle_bg_bluegray_50_border_black_900_radius_20"
        android:hint="Password"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEditTextUsername" />


    <ImageButton
        android:id="@+id/loginButtonShowHidePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:background="#00FFFFFF"
        android:src="@drawable/show_hide_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toEndOf="@+id/loginEditTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/loginEditTextUsername" />

    <Button
        android:id="@+id/loginButtonLogin"
        android:layout_width="@dimen/_112sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_34sdp"
        android:background="@drawable/rectangle_bg_purple_300_border_black_900_radius_60"
        android:fontFamily="@font/inria_sans"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:gravity="center"
        android:shadowRadius="20"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEditTextPassword" />

    <ImageButton
        android:id="@+id/loginButtonGoogleSignIn"
        android:background="@drawable/rectangle_bg_white_a700_border_black_900_radius_60"
        android:layout_width="@dimen/_112sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButtonLogin"
        android:src="@drawable/google_sign"
        android:shadowRadius="20"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:foregroundGravity="center"
        android:scaleType="fitCenter">
    </ImageButton>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_71sdp"
        android:fontFamily="@font/inria_sans"
        android:text="Don't have an account?"
        android:textColor="#FF000000"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButtonGoogleSignIn" />

    <Button
        android:id="@+id/loginButtonRegister"
        android:layout_width="@dimen/_112sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/inria_sans"
        android:text="Register"
        android:textSize="@dimen/_15ssp"
        android:gravity="center"
        android:shadowRadius="20"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/rectangle_bg_purple_300_border_black_900_radius_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>